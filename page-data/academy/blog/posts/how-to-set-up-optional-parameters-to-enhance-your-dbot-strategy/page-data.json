_url":"https://deriv.com/dbot/","name":"DBot vertical","banner_image":{"id":"d295bd16-9bf5-410f-b7b5-9372f185d2d3","description":null,"imageFile":{"childImageSharp":{"gatsbyImageData":{"layout":"constrained","backgroundColor":"#f86848","images":{"fallback":{"src":"/static/6f420a304c3d3f27ebf848c031cdf29b/7ba5c/dbot.png","srcSet":"/static/6f420a304c3d3f27ebf848c031cdf29b/19717/dbot.png 164w,\n/static/6f420a304c3d3f27ebf848c031cdf29b/883ee/dbot.png 328w,\n/static/6f420a304c3d3f27ebf848c031cdf29b/7ba5c/dbot.png 656w","sizes":"(min-width: 656px) 656px, 100vw"},"sources":[{"srcSet":"/static/6f420a304c3d3f27ebf848c031cdf29b/1da69/dbot.webp 164w,\n/static/6f420a304c3d3f27ebf848c031cdf29b/8cb7c/dbot.webp 328w,\n/static/6f420a304c3d3f27ebf848c031cdf29b/e41ae/dbot.webp 656w","type":"image/webp","sizes":"(min-width: 656px) 656px, 100vw"}]},"width":656,"height":1068}}}}}}]}},"pageContext":{"locale":"en","pathname":"/academy/blog/posts/how-to-set-up-optional-parameters-to-enhance-your-dbot-strategy/","slug":"how-to-set-up-optional-parameters-to-enhance-your-dbot-strategy"}},"staticQueryHashes":["2998272888","3480019573","663631165","764694655"]}